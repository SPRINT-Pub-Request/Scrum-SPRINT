</head>
<body>
    
    {{> sidebar viewFlag=viewFlag mReqFlag=mReqFlag mUserFlag=mUserFlag}}

    <div class="container-center with-sidebar">

        <h1>User Database</h1>
        <div class="h-spacer50"></div>

        <div class="row">
        <div class="col-sm-12">

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="users" role="tabpanel" aria-labelledby="users-tab">
                    <div class="spacer"></div>

                    <table id="userstable" class="table table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Email</th>
                                <th scope="col">Name</th>
                                <th scope="col">Committee</th>
                                <th scope="col">Role</th>
                                <th scope="col">Assigned Committees</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">john.doe@dlsu.edu.ph</th>
                                <td>John Doe</td>
                                <td>HRD</td>
                                <td>Requester</td>
                                <td>N/A</td>
                            </tr>

                            <tr>
                                <th scope="row">Zohn.doe@dlsu.edu.ph</th>
                                <td>Zohn Doe</td>
                                <td>Secretariat</td>
                                <td>Secretariat</td>
                                <td>TND, Finance</td>
                            </tr>

                            <tr>
                                <th scope="row">Kohn.doe@dlsu.edu.ph</th>
                                <td>Kohn Doe</td>
                                <td>HRD</td>
                                <td>Requester</td>
                                <td>N/A</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
        </div>
        
        <div class="h-spacer50"></div>

        <h2>Edit User Information</h2>
            <div class="h-spacer50"></div>
        <form method="post" action="/updateUser">
            <p name = "userEmail" id = "userEmail" type = "text">jerickson_lee@dlsu.edu.ph</p>
            <input id = "name" name = "name" type="text" placeholder="Name">

            <select name = "committee" id = "committee">
                <option value = "Activities">Activities</option>
                <option value = "Finance">Finance</option>
                <option selected value = "HRD">HRD</option>
                <option value = "TND<">TND</option>
                <option value = "P-EVP">P-EVP</option>
                <option value = "Secretariat">Secretariat</option>
                <option value = "Externals">Externals</option>
                <option value = "Socio Civic">Socio Civic</option>
            </select>

            <select name = "role" id = "role">
                <option value = "Requester" selected>Requester</option>
                <option value = "Publicity and Creatives">Publicity and Creatives</option>
                <option value = "Secretariat">Secretariat</option>
                <option value = "Administrator">Administrator</option>
            </select>

            Assigned : <input name = "assigned_committees" type="text" placeholder="N/A" disabled> <br><br>
                <button type = "submit">Save</button>
            </form>
                <button>Cancel</button>
                <button id = "btnRemoveUser">Remove User</button>
                <p id = "error">{{error}}</p>
    </div>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.15/api/row().show().js"></script>

    <script>
        $(document).ready(function() {
            $('#userstable').DataTable();
        } );
    </script>

</body>
</html>